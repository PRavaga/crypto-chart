<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">    

    <!--Custom size margins-->
    <Thickness x:Key="PageTitleMargin">0,8,12,7</Thickness>
    <Thickness x:Key="PageTitleFullMargin">12,8,12,7</Thickness>
    <Thickness x:Key="PageTitleNarrowMargin">48,8,12,7</Thickness>
    <Thickness x:Key="PageTitleNarrowFullMargin">60,8,12,7</Thickness>
    <Thickness x:Key="PageTitleDeltaMargin">48,0,0,0</Thickness>

    <!--Medium size margins-->
    <Thickness x:Key="LeftRightMargin">12,0,12,0</Thickness>
    <Thickness x:Key="LeftTopRightBottomMargin">12,12,12,12</Thickness>

</ResourceDictionary>
